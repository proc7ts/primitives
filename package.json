{
  "name": "@proc7ts/primitives",
  "version": "1.2.0",
  "description": "Type and function primitives",
  "keywords": [
    "primitives",
    "function",
    "typescript"
  ],
  "homepage": "https://github.com/proc7ts/primitives",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:proc7ts/primitives.git"
  },
  "license": "MIT",
  "author": "Ruslan Lopatin <ruslan.lopatin@gmail.com>",
  "bugs": {
    "url": "https://github.com/proc7ts/primitives/issues"
  },
  "main": "dist/primitives.js",
  "module": "dist/primitives.mjs",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/primitives.mjs",
      "require": "./dist/primitives.js"
    }
  },
  "devDependencies": {
    "@proc7ts/eslint-config": "^2.0.5",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "codecov": "^3.8.0",
    "eslint": "^7.10.0",
    "eslint-plugin-jest": "^24.1.0",
    "gh-pages": "^3.1.0",
    "jest": "^26.5.2",
    "jest-junit": "^12.0.0",
    "rollup": "^2.28.2",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.27.3",
    "run-z": "~1.0.2",
    "shx": "^0.3.2",
    "ts-jest": "^26.4.1",
    "tslib": "^2.0.2",
    "typedoc": "^0.19.0",
    "typedoc-plugin-external-module-name": "^4.0.3",
    "typescript": "^4.0.3"
  },
  "scripts": {
    "all": "run-z build,lint,test",
    "bootstrap": "rollup --config ./rollup.config.js",
    "build": "run-z +z bootstrap",
    "ci:all": "run-z all +test/--ci/--runInBand",
    "clean": "run-z +z --then shx rm -rf d.ts dist target",
    "doc": "run-z +z --then typedoc",
    "doc:publish": "run-z doc --then gh-pages --dist target/typedoc --dotfiles",
    "lint": "run-z +z --then eslint .",
    "test": "run-z +z --then jest",
    "z": "run-z +bootstrap,+doc,+lint,+test"
  }
}
